<UserControl x:Class="HorizontalPrototype.RecipieButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HorizontalPrototype"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="470">
    <Grid>
        <Button x:Name="RecipeName" Margin="20,20,160,20" Content="Some Recipe" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="32" Background="{x:Null}" Foreground="#FFFF4949" Click="RecipeName_Click"/>
        <Button x:Name="RecipeTime" Margin="380,20,30,20" Content="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="26.667" Background="{x:Null}" Foreground="#FFFF4949"/>
    </Grid>
</UserControl>

