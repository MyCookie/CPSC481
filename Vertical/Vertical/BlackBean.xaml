<UserControl x:Class="Vertical.BlackBean"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Image HorizontalAlignment="Left" Height="249" VerticalAlignment="Top" Width="240" Source="Pictures/Recipes/burgerblackbean.jpg" Stretch="UniformToFill" Margin="0,-1,0,0"/>
        <Button x:Name="like" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="51" Foreground="{x:Null}" Height="41" BorderBrush="{x:Null}" Click="like_Click" Margin="0,-1,0,0">
            <Button.Background>
                <ImageBrush ImageSource="Pictures/favourite.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="97" Stroke="White" VerticalAlignment="Top" Width="240" Margin="0,151,0,0"/>
        <Button x:Name="dislike" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="51" Foreground="{x:Null}" Height="41" BorderBrush="{x:Null}" Margin="0,40,0,0" Click="dislike_Click">
            <Button.Background>
                <ImageBrush ImageSource="Pictures/brokenheart.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button x:Name="todoRemove" Content="-" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="51" Margin="189,0,0,204" Height="87" BorderBrush="{x:Null}" Foreground="#FF77EE53" Background="{x:Null}" FontFamily="Segoe UI Symbol" FontSize="66.667" Click="todoRemoveButton_Click" VerticalContentAlignment="Top" HorizontalContentAlignment="Center"/>
        <Button x:Name="todoAdd" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="51" Margin="189,-19,0,0" Height="59" BorderBrush="{x:Null}" Foreground="#FF77EE53" Background="{x:Null}" FontFamily="Segoe UI Symbol" FontSize="40" Click="todoAddButton_Click" VerticalContentAlignment="Center"/>
        <Rectangle Fill="#FFE61A1A" HorizontalAlignment="Left" Height="86" Margin="0,151,0,0" VerticalAlignment="Top" Width="170"/>
        <Label Content="Black Bean Veggie Burger&#xA;You'll never eat a frozen veggie burger&#xA;after this!" HorizontalAlignment="Left" Margin="0,142,0,0" VerticalAlignment="Top" Width="240" Height="62" Foreground="White" Background="#FF423F3F"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="33" Margin="0,215,0,0" VerticalAlignment="Top" Width="178" Source="Pictures/5_Star_Rating_System_2_and_a_half_stars.png" OpacityMask="#FF168505"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="208,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Background="White" Height="31" Width="32" FontSize="26.667"><Run Text="35"/><LineBreak/><Run/></TextBlock>
        <StackPanel Margin="178,215,92,52" Orientation="Vertical">
            <Canvas Height="34">
                <Image x:Name="image1" Height="34" VerticalAlignment="Top" Source="Pictures/clock-128.png" OpacityMask="Black" Width="31"/>

            </Canvas>

        </StackPanel>

    </Grid>
</UserControl>
