<UserControl x:Class="Vertical.MoreMashPictures"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="480">
    <Grid Background="#FFF0E1E1">
        <Image HorizontalAlignment="Left" Height="475" Margin="45,101,0,0" VerticalAlignment="Top" Width="395"/>
        <Label Content="More Pictures" HorizontalAlignment="Left" VerticalAlignment="Top" Height="62" Width="235" Margin="127,0,0,0" FontSize="36"/>
        <Button Content="&#xE00E;" HorizontalAlignment="Left" Margin="0,305,0,0" VerticalAlignment="Top" Width="40" Height="87" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="48" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
